        <filter-name>AdminFilter</filter-name>
        <filter-class>com.alexanderdoma.peruinolvidable.filters.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/dashboard</url-pattern>
        <url-pattern>/admin/products</url-pattern>
        <url-pattern>/admin/product</url-pattern>
